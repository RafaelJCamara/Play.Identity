{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ServiceSettings": {
    "ServiceName": "Identity"
  },
  "MongoDbSettings": {
    "Host": "localhost",
    "Port": 27017
  },
  "IdentitySettings": {
    "AdminUserEmail": "admin@play.com",
    "StartingGil":  100
  },
  "IdentityServerSettings": {
    "ApiScopes": [
      {
        "Name": "catalog.fullaccess"
      },
      {
        "Name": "catalog.readaccess"
      },
      {
        "Name": "catalog.writeaccess"
      }
      {
        "Name": "inventory.fullaccess"
      },
      {
        "Name": "IdentityServerApi"
      }
    ],
    "ApiResources": [
      {
        "Name": "Catalog",
        "Scopes": [
          /*
            This means that anytime someone asks for a token with scope catalog.fullaccess, the token will come with the audience of Catalog
          */
          "catalog.fullaccess",
          "catalog.readaccess",
          "catalog.writeaccess"
        ],
        /*
          What this is saying is that the token must now include user related claims, namely the role claim
        */
        "UserClaims": [
          "role"
        ]
      },
      {
        "Name": "Inventory",
        "Scopes": [
          /*
            This means that anytime someone asks for a token with scope catalog.fullaccess, the token will come with the audience of Catalog
          */
          "inventory.fullaccess"
        ],
        /*
          What this is saying is that the token must now include user related claims, namely the role claim
        */
        "UserClaims": [
          "role"
        ]
      },
      {
        "Name": "Identity",
        "Scopes": [
          /*
            This means that anytime someone asks for a token with scope catalog.fullaccess, the token will come with the audience of Catalog
          */
          "IdentityServerApi"
        ],
        /*
          What this is saying is that the token must now include user related claims, namely the role claim
        */
        "UserClaims": [
          "role"
        ]
      }
    ]
  },
  "AllowedHosts": "*"
}